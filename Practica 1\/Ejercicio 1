#include<stdio.h>

int main(void)
    {
        int n;
        int a[5];
        int opcion;
        int suma=0;
        int resta=0;
        int max=0;
        int min=0;
        int pos=0;
        float prom=0;
        do
        {
        printf("Ingrese una cantidad (Maximo 5 caracteres)");
        scanf("%d", &n);
        if(n>5 || n<0)
        {
                printf("numero invalido ingrese un numero valido\n");
        }
        } while(n>5 || n<0);

        printf("ingrese %d numeros: \n",n);
        for(int i=0; i<n; i++)
        {
            printf("Elemento %d:", i);
            scanf("%d", &a[i]);
        }

        printf("Los elementos del arreglo son:\n");
        for(int i=0; i<n; i++)
        {
            printf("%d \n", a[i]);
        }
