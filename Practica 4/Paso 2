#include<stdio.h>
#include<stdlib.h>


int*ReservarMemoria(int *n){
    printf("Cuantos elementos enteros quieres almacenar?\n");
    scanf("%d", n);
    
    int *ptr = (int*) calloc (*n, sizeof(int)); //reservamos memoria con calloc
    if (ptr== NULL){
        printf("NO SE PUDO RESERVAR LA MEMORIA FINALIZANDO PROGRAMA");
        exit(1);
    }
    
    return ptr;
}

int main(){
    int n;
    int *arreglo = ReservarMemoria(&n);
    
    printf("Los valores del arreglo son: \n");
    for(int i=0; i<n; i++){
        printf("%d \n", arreglo[i]); //imprime valores inicializados en 0 dependiendo de la memoria reservada
    }
    
    free(arreglo);
    
    return 0;
}
