#include<stdio.h>
#include<stdlib.h>


int*ReservarMemoria(int *n){
    printf("Cuantos elementos enteros quieres almacenar?\n");
    scanf("%d", n);
    
    int *ptr = (int*) malloc ((*n) *sizeof(int));
    if (ptr== NULL){
        printf("NO SE PUDO RESERVAR LA MEMORIA FINALIZANDO PROGRAMA");
        exit(1);
    }
    
    return ptr;
}

int main(){
    int n;
    int *arreglo = ReservarMemoria(&n);
    
    for( int i=0; i<n; i++){
        printf("Elemento %d:", i+1); //pedimos al usuario llenar los elementos del arreglo
        scanf("%d", &arreglo[i]);
    }
    
    printf("Los valores del arreglo son: \n");
    for(int i=0; i<n; i++){
        printf("%d \n", arreglo[i]);
    }
    
    free(arreglo);
    
    return 0;
}
